<Window x:Class="PiggyCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TreeView HorizontalAlignment="Left" Name="accountsTreeView" VerticalAlignment="Top"/>
        <TabControl HorizontalAlignment="Left" Name="viewsTabControl" VerticalAlignment="Top">
            <TabItem Header="Overview" Name="overviewTabItem">
                <Grid />
            </TabItem>
            <TabItem Header="Transactions" Name="transactionsTabItem">
                <Grid />
            </TabItem>
            <TabItem Header="Bills" Name="billsTabItem">
                <Grid />
            </TabItem>
            <TabItem Header="Portfolio" Name="portfolioTabItem">
                <Grid />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
